{{!< default}}
{{!-- The tag above means - insert everything in this file into the {body} of the default.hbs template --}}

{{!-- The big featured header --}}
<header class="main-header {{#if tag.image}}" style="background-image: url({{tag.image}}){{else}}{{#if @blog.cover}}" style="background-image: url({{@blog.cover}}){{else}}no-cover{{/if}}{{/if}}">
    <div class="on-image-logo__wrapper">
        <img src="{{asset "imgs/emil-cardell-white.svg"}}" class="on-image-logo__image" />
    </div>
</header>
<div class="nav" id="nav">
    <div class="nav__logo nav__logo--hidden" id="logo" >
        <img src="{{asset "imgs/emil-cardell-black.svg"}}" />
    </div>
{{navigation}}
</div>

{{!-- The main content area on the homepage --}}
<main id="content" class="content" role="main">
    <h1 class="tag-title">Posts about {{tag.name}}</h1>

    {{!-- The tag below includes the post loop - partials/loop.hbs --}}
    {{> "loop"}}

</main>
